{#=====================================================
Things list page
- List of things passed in as 'things' array
- Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

Flask Demo - All Things

{% endblock %}

{% block content %}

<h1 id="h1">Campaigns</h1>




<ul class="campaign_list">
    {% for campaign in campaigns %}
    <li class="campaign_details">
        <div class="campaign_link">
            <a href="/campaign/{{ campaign.id }}" id="campaign_name" class="campaign_view">
                {{ campaign.name }}
            </a>
            <a href="/campaign/{{ campaign.id }}">View</a>
            <div class="campaign_buttons">
                <a href="/campaign/{{ campaign.id }}/edit" class="btn edit_btn">Edit</a>
                <a href="/campaign/{{ campaign.id }}/delete" class="btn delete_btn">Delete</a>
            </div>
        </div>
    </li>
    {% else %}
    <p>There are no current campaigns</p>
    {% endfor %}
</ul>






<article>

    <h3>Add a New Thing...</h3>

    <form action="/add" method="POST">

        <input type="text" name="name" placeholder="Name of new thing" required>

        <input type="number" name="price" min="0" placeholder="Price in dollars" required>

        <button>Add the Thing</button>

    </form>

</article>

{% endblock %}