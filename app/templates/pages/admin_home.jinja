{% extends 'pages/base.jinja' %}

{% block title %}
Flask Demo - All Campaigns
{% endblock %}

{% block content %}

<h1 id="h1">Campaigns</h1>

<ul>
    {% for campaign in campaigns %}
    <li class="details">
        <a href="/campaign/{{ campaign.id }}" class="link">
            <div id="name">{{ campaign.name }}</div>
            <div class="view">View</div>
        </a>
        <div class="edit-delete">
            <a href="/show_edit/{{ campaign.id }}">Edit</a> |
            <a href="/admin_confirm_delete_campaign/{{ campaign.id }}">Delete</a>
        </div>
    </li>
    {% else %}
    <p>There are no current campaigns</p>
    {% endfor %}
</ul>

<details id="add_campaign">
    <summary role="button">Add a new campaign</summary>
    <form action="/add" method="POST">
        <input type="text" name="name" placeholder="Name of new campaign" required>
        <select name="dm_id" required>
            {% for dm in dms %}
            <option value="{{ dm.dm_id}}">{{ dm.dm_name }}</option>
            {% else %}
            <option value="None" disabled selected>No DMs defined! Add some first</option>
            {% endfor %}
        </select>
        <input type="number" name="max_players" placeholder="Max players" required min="1">
        <input type="number" name="current_players" placeholder="Current players" required min="0">
        <input type="text" name="description" placeholder="Description">
        <input type="number" name="current_level" placeholder="Current party level">
        <p>Current documents (e.g., Middle Earth|https://docs.google.com/...)</p>
        <input type="text" name="docs_link1" placeholder="Document name|Link">
        <input type="text" name="docs_link2" placeholder="Document name|Link">
        <input type="text" name="docs_link3" placeholder="Document name|Link">
        <input type="text" name="docs_link4" placeholder="Document name|Link">
        <input type="text" name="docs_link5" placeholder="Document name|Link">

        <button>Submit</button>
    </form>
</details>



{% endblock %}