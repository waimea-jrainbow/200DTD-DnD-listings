{#=====================================================
Campaign page
- Shows details of a single thing
- Has a delete link to remove it
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

Dnd listings - {{ dm.name }}

{% endblock %}


{% block content %}

<h1 id="details_title">{{ dm.dm_name }}</h1>


<article id="campaign_specifics">
    <p><strong>DM:</strong> {{ dm.dm_name }}</p>
    <p><strong>Email:</strong> {{ dm.dm_email }}</p>
    <p><strong>Phone:</strong> {{ dm.dm_phone }}</p>
    <p><strong>Discord:</strong> {{ dm.dm_discord }}</p>
    <p><strong>Campaigns:</strong>
        <ul>
        {% for campaign in campaigns %}
            <li>{{ campaign.name }}</li>
        {% else %}
            <li>No campaigns assigned</li>
        {% endfor %}
        </ul>
    </p>
</article>


<a id="back_button" href="/admin_dms" role="button">Back to DM list</a>
    


{% endblock %}