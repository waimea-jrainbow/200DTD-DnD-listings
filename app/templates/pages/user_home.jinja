{#=====================================================
Home page
- List all campaigns
- Form for adding a new campaign
- Click on a campaign to view details about it
=====================================================#}

{% extends 'pages/base.jinja' %}

{% block title %}
WaiCol D&D - Home page
{% endblock %}

{% block content %}

<h1 id="h1">Campaigns</h1>


<ul>
    {% for campaign in campaigns %}
    <li class="details" role="button">
        <a href="/campaign/{{ campaign.id }}" class="link">
            <div class="name">{{ campaign.name }} - DM: {{ campaign.dm_name }} - Players - ({{ campaign.current_players
                }}/{{ campaign.max_players }})</div>
            <div class="view">Click to view</div>
        </a>
    </li>
    {% else %}
    <p>There are no current campaigns</p>
    {% endfor %}
</ul>


{% endblock %}